<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf" content="<%= _csrf %>" />
    <title>My Todo App</title>
    <link rel="stylesheet" href="./css/styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include("header.ejs") %>

        <%- include("flash.ejs", { messages }) %>

        <section class="my-2">
          <form action="/users" method="post" class="gap-4">
            <input type="hidden" name="_csrf" value="<%= _csrf %>" />

            <div class="my-4 flex flex-col gap-1 w-full">
                <label class="text-gray-800" for="firstName">First Name</label>
                <input id="firstName" name="firstName" placeholder="First Name" class="p-2 rounded shadow-sm border border-gray-300 text-gray-700" />
            </div>

            <div class="my-4 flex flex-col gap-1 w-full">
                <label class="text-gray-800" for="lastName">Last Name</label>
                <input id="lastName" name="lastName" placeholder="Last Name" class="p-2 rounded shadow-sm border border-gray-300 text-gray-700" />
            </div>

            <div class="my-4 flex flex-col gap-1 w-full">
                <label class="text-gray-800" for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Email" class="p-2 rounded shadow-sm border border-gray-300 text-gray-700" />
            </div>

            <div class="my-4 flex flex-col gap-1 w-full">
                <label class="text-gray-800" for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Password" class="p-2 rounded shadow-sm border border-gray-300 text-gray-700" />
            </div>

            <div class="my-6">
                <button class="text-white bg-green-400 hover:bg-green-600 py-2 px-4 rounded shadow-sm">Sign Up</button>
            </div>
            
          </form>
        </section>
      </div>
    </div>
  </body>
</html>
